{
  "name": "edulure-platform",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "backend-nodejs",
    "frontend-reactjs",
    "sdk-typescript"
  ],
  "engines": {
    "node": ">=20.12.2",
    "npm": ">=10.5.0"
  },
  "scripts": {
    "preinstall": "node ./scripts/verify-node-version.mjs",
    "bootstrap": "npm install --workspaces",
    "dev:stack": "node ./scripts/dev-stack.mjs",
    "dev:observability": "node ./scripts/observability-stack.mjs",
    "onboard": "node ./scripts/onboard.mjs",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present && npm run test:repo",
    "test:repo": "vitest run",
    "release:readiness": "node ./scripts/release/run-readiness.mjs",
    "qa:coverage": "node ./scripts/qa/collect-coverage.mjs",
    "qa:manual-readiness": "node ./scripts/qa/generate-manual-readiness.mjs",
    "qa:export-scenarios": "node ./scripts/qa/export-scenarios.mjs",
    "audit": "node ./scripts/security/run-npm-audit.mjs",
    "audit:ci": "node ./scripts/security/run-npm-audit.mjs --workspace backend-nodejs && node ./scripts/security/run-npm-audit.mjs --workspace frontend-reactjs && npm --workspace sdk-typescript run audit:dependencies",
    "license:report": "node ./scripts/security/generate-license-report.mjs",
    "describe:environment": "node ./scripts/infrastructure/describe-environment.mjs",
    "zap:baseline": "node ./scripts/security/verify-security-headers.mjs"
  },
  "config": {
    "minimumNodeVersion": "20.12.2",
    "minimumNpmVersion": "10.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "license-checker": "^25.0.1",
    "vitest": "^4.0.3"
  },
  "overrides": {
    "esbuild": "0.25.11",
    "fast-redact": "3.5.0",
    "vite": "7.1.11",
    "vite-node": "3.2.4",
    "victory-vendor": {
      "d3-color": "3.1.0",
      "d3-interpolate": "3.0.1"
    }
  }
}
