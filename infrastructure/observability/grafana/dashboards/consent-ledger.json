{
  "uid": "consent-ledger",
  "title": "Consent Ledger Mutations",
  "tags": ["compliance", "consent"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Consent Mutation Error Rate (5m)",
      "description": "Ratio of failed consent mutations over the last five minutes, grouped by mutation operation.",
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 0 },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (operation) (rate(edulure_consent_mutation_attempts_total{outcome=\"error\"}[5m])) / sum by (operation) (rate(edulure_consent_mutation_attempts_total[5m]))",
          "legendFormat": "{{operation}}",
          "interval": ""
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Current Error Rate by Operation & Tenant",
      "description": "Latest observed consent mutation error rate broken down by API operation and tenant.",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 9 },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "edulure_consent_mutation_error_rate",
          "legendFormat": "{{operation}} â€¢ {{tenant_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 3,
      "type": "table",
      "title": "Consent Mutation Errors by Reason (1h)",
      "description": "Distribution of consent mutation failures over the last hour grouped by operation, tenant, and error reason.",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 9 },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (operation, tenant_id, reason) (increase(edulure_consent_mutation_errors_total[1h]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "align": "auto"
          }
        },
        "overrides": []
      },
      "options": {
        "showHeader": true,
        "footer": {
          "enablePagination": true,
          "fields": "",
          "reducer": ["sum"],
          "show": false
        }
      }
    }
  ]
}
