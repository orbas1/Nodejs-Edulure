{
  "name": "edulure-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.12.2"
  },
  "scripts": {
    "dev": "nodemon src/bin/web.js",
    "dev:worker": "nodemon src/bin/worker.js",
    "dev:realtime": "nodemon src/bin/realtime.js",
    "dev:stack": "nodemon --watch src --ext js,json --exec \"node src/bin/stack.js\"",
    "start": "node src/bin/web.js",
    "start:web": "node src/bin/web.js",
    "start:worker": "node src/bin/worker.js",
    "start:realtime": "node src/bin/realtime.js",
    "start:stack": "node src/bin/stack.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest run",
    "test:release": "NODE_ENV=test vitest run test/release --reporter=basic",
    "db:install": "node scripts/install-db.js",
    "migrate:latest": "knex --knexfile knexfile.cjs migrate:latest",
    "migrate:rollback": "knex --knexfile knexfile.cjs migrate:rollback",
    "seed": "knex --knexfile knexfile.cjs seed:run",
    "data:retention": "node scripts/run-data-retention.js",
    "data:partition": "node scripts/manage-data-partitions.js",
    "db:schema:check": "node scripts/verify-schema-drift.js",
    "db:schema:snapshot": "node scripts/verify-schema-drift.js --write",
    "runtime:config": "node scripts/runtime-config.js",
    "audit:dependencies": "npm audit --audit-level=moderate",
    "security:rotate-jwt": "node scripts/rotate-jwt-keys.js",
    "storage:provision": "node scripts/provision-r2-buckets.js",
    "search:provision": "node scripts/provision-search-cluster.js",
    "search:reindex": "node scripts/reindex-search-indexes.js",
    "docs:build": "node scripts/build-openapi-specs.js --clean",
    "db:erd": "node scripts/generate-erd.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.614.0",
    "@aws-sdk/lib-storage": "^3.614.0",
    "@aws-sdk/s3-request-presigner": "^3.614.0",
    "@paypal/paypal-server-sdk": "^1.0.1",
    "adm-zip": "^0.5.15",
    "bcryptjs": "^2.4.3",
    "clamav.js": "^0.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "fast-xml-parser": "^4.3.6",
    "graphql": "^16.11.0",
    "graphql-http": "^1.22.4",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "ipaddr.js": "^1.9.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "marked": "^16.4.1",
    "meilisearch": "^0.37.0",
    "mime-types": "^2.1.35",
    "mysql2": "^3.9.7",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.9",
    "on-finished": "^2.4.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.2",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.5",
    "stripe": "^16.6.0",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.22.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "ajv": "^8.17.1",
    "autocannon": "^8.0.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.15.0",
    "nodemon": "^3.0.3",
    "pino-pretty": "^13.1.2",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "vite": "^7.1.11",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "fast-redact": "3.5.0"
  }
}
